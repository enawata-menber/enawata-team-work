<div class = container>
  <div class =row>
    <h2>商品新規登録</h2>
      <%= form_with model: Item.new, url: admin_items_path do |f| %>
        <h3>商品画像</h3>
          <%= f.file_field :image, accept: "image/*" %>
        <h3>商品名</h3>
          <%= f.text_field :name %>
        <h3>商品説明</h3>
          <%= f.text_area :introduction %>
        <h3>ジャンル</h3>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %>
        <h3>税抜価格</h3>
          <%= f.text_field :price %>
        <h3>販売ステータス</h3>
          <%= f.radio_button :status, "販売中" %>
          <%= f.label :status, "販売中" %>
          <%= f.radio_button :status, "販売停止中" %>
          <%= f.label :status, "販売停止中" %>
          <%= f.submit '新規登録' %>
      <% end %>
  </div>
</div>