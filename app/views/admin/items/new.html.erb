<div class = container>
  <div class =row>
      <%= form_with model: Item.new, url: admin_items_path do |f| %>
        <h4>商品新規登録</h4>
        <div>
          <%= f.label :商品画像 %>    
          <%= f.file_field :image, accept: "image/*" %>
        </div>
        <div>
          <%= f.label :商品名 %>
          <%= f.text_field :name %>
        </div>
        <div>
          <%= f.label :商品説明 %>
          <%= f.text_area :introduction %>
        </div>
        <div>
          <%= f.label :ジャンル %>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %>
        </div>
        <div>
          <%= f.label :税抜価格 %>
          <%= f.text_field :price %>
        </div>
        <div>
          <%= f.label :販売ステータス %>
          <%= f.radio_button :is_active, true %>
            <%= f.label :is_active, "販売中" %>
          <%= f.radio_button :is_active, false %>
            <%= f.label :is_active, "販売停止中" %>
        </div>
        <div>
          <%= f.submit '新規登録' %>
        </div>
      <% end %>
  </div>
</div>