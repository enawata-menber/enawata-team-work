<div class = container>
  <div class =row>
      
      <h2>商品編集</h2>
        <%= form_with model: @item, url: admin_item_path, local: true do |f| %>
          <div>
            <%= f.label :商品画像 %>
              <%= f.file_field :image, accept: "image/*" %>
          </div>
          <div>
            <%= f.label :商品名 %>
              <%= f.text_field :name  %>
          </div>
          <div>
            <%= f.label :商品説明 %>
              <%= f.text_area :introduction  %>
          </div>
          <div>
            <%= f.label :商品ジャンル %>
              <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %>
          </div>
          <div>
            <%= f.label :税抜価格 %>
              <%= f.text_field :price  %>
          </div>
          <%= f.radio_button :is_active, true %>
          <%= f.label :is_active, "販売中" %>
          <%= f.radio_button :is_active, false %>
          <%= f.label :is_active, "販売停止中" %>
            <%= f.submit '変更を保存' %>
        <% end %>
  </div>
</div>