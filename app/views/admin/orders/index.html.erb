<div class="row align-items-center">
  <div class="col-auto">
    <h4 style="background-color: #f8f9fa; padding: 0.25rem 0.75rem;">注文履歴一覧</h4>
  </div>
    <table class="table">
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>　<!--必須機能ではない-->
      </tr>
      <% @orders.each do |order| %>
      <tr>
        <td><%= link_to admin_order_path(order) do %><%= order.created_at.strftime('%Y/%m/%d %H:%M') %><% end %></td> <!--詳細画面へ-->
        <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
        <td><%= order.order_details.sum(:amount) %></td>
        <td><%= order.status_i18n%></td>
      </tr>
      <% end %>
    </table>
</div>
