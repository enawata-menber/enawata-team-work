<h3 class="bg-secondary">注文履歴一覧</h3>

<table>
  <tr>
    <th>購入日時</th>
    <th>購入者</th>
    <th>注文個数</th>
    <th>注文ステータス</th>　<!--必須機能ではない-->
  </tr>
  <% @orders.each do |order| %>
    <tr>
    <td>
      <%= order.created_at.strftime('%Y/%m/%d %H:%M') %>
      <%= order.customer.full_name %>
      <%= order.cart_items.sum(:quantity) %>
      <!--注文ステータスはここ-->
    </td>
    </tr>
  <% end %>
</table>
