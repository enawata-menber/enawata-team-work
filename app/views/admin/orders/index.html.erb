<div class="container">
    <div class="row">
        <div class="col">
            <h3>注文履歴一覧</h3>
            
            <table class="table">
              <tr>
                <th>購入日時</th>
                <th>購入者</th>
                <th>注文個数</th>
                <th>注文ステータス</th>　<!--必須機能ではない-->
              </tr>
              <% @orders.each do |order| %>
                <tr>
                  <td><%= link_to admin_order_path(order) do %><%= order.created_at.strftime('%Y/%m/%d %H:%M') %><% end %></td> <!--詳細画面へ-->
                  <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
                  <td><%= order.order_details.sum(:amount) %></td>
                  <td><%= order.status %></td>
                </tr>
              <% end %>
            </table>
         </div>
    </div>
</div>           
