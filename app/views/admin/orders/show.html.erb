<div class="container">
<h3>注文履歴詳細</h3>
 <div class="row">
    <div class="col-xs-6">

   <div>
     <p>購入者
       <%= link_to admin_customer_path (@order) do %>
          <%= @order.customer.last_name %><%= @order.customer.first_name %>
       <% end %>
     </p>
   </div>
   <div>
     <p>注文日
        <%= @order.customer.created_at.strftime('%Y/%m/%d') %>
     </p>
   </div>
   <div>
     <p>配送先
        〒<%= (@order.customer.postal_code).to_s.insert(3, "-") %>
        <%= @order.order_address %>
     </p>
   </div>
   <div>
      <p>支払い方法
      <%= @order.peyment_method %>
      </p>
   </div>
   <div>
    <p>注文ステータス
       <%= form_with model:@order, url: admin_order_path, local: true do |f| %>
          <%= f.select :status, ["入金待ち", "入金確認","製作中","発送準備中","発送済み"] %>
          <%= f.submit "更新", class: 'btn btn-primary' %>
       <% end %>
    </p>
    </div>
    </div>
  </div>
 
<div class="row">
   <div class="col-xs-8">
      <table class=table>
         <thead>
           <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
           </tr>
         </thead>
         <% @order_details.each do |order_detail| %>
         <tbody>
          <tr>
           <td><%= order_detail.item.name %></td>
           <td><%= (order_detail.price*1.1).floor.to_s(:delimited) %></td>
           <td><%= order_detail.amount %></td>
           <td><%= (order_detail.item.price * order_detail.amount).to_s %>円</td>
           <td><%= form_with model:order_detail, url: admin_order_detail_path(order_detail), local: true do |f| %>
                   <%= f.select :make_status, ["製作不可", "製作待ち", "製作中", "製作完了"] %>
                   <%= f.submit "更新", class: 'btn btn-primary' %>
                 <% end %></td>
          </tr>
         </tbody>
         <% end %>
       </table>
    </div>
 
    <div class="col-xs-4">
      <div>
         <p>商品合計
         <%= @order.total_payment - 800 %>円
         </p>
      </div>
      <div>
         <p>送料
         <%= 800 %>円
         </p>
      </div>
      <div>
       <p>請求金額合計
       <%= @order.total_payment %>円
       </p>
      </div>
    </div>
   </div>
</div>
 
 
   
   
   