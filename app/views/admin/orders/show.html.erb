<h3>注文履歴詳細</h3>
 <div class="row">
   <div>
     <p>購入者</p>
       <%= link_to admin_customer_path (@order) do %>
         <%= @order.customer.full_name %>
       <% end %>
   </div>
   <br>
   <div>
     <p>注文日</p>
        <%= @order.customer.created_at.strftime('%Y/%m/%d') %>
   </div>
   <br>
   <div>
     <p>配送先</p>
        <%= (@order.customer.postal_code).to_s.insert(3, "-") %>
        <%= @order.customer.addresses %>
        <%= @order.customer.full_name %>
   </div>
   <br>
   <div>
      <p>支払い方法</p>
      <%= @order.peyment %>
   </div>
   <br>
   <div>
    <p>注文ステータス</p>
       <%= form_with model:@order, url: admin_order_path, local: true do |f| %>
          <%= f.select :status, ["入金待ち", "入金確認","製作中","発送準備中","発送済み"] %>
          <%= f.submit "更新", class: 'btn btn-primary' %>
       <% end %>
    </div>
 </div>
 
<div class="row">
 <table class=table>
    <thead>
      <tr>
       <th>商品名</th>
       <th>単価（税込）</th>
       <th>数量</th>
       <th>小計</th>
       <th>製作ステータス</th>
      </tr>
    </thead>
    <% @order_details.each do |order_detail| %>
    <tbody>
     <tr>
      <td><%= order_detail.item.name %></td>
      <td><%= (order_detail.price*1.1).floor.to_s(:delimited) %></td>
      <td><%= order_detail.amount %></td>
      <td>%= ((order_detail.price * order_detail.amount*1.1).floor).to_s(:delimited) %></td>
      <td><%= form_with model:order_detail, url: admin_order_detail_path(order_detail), local: true do |f| %>
              <%= f.select :make_status, ["製作不可", "製作待ち", "製作中", "製作完了"] %>
              <%= f.submit "更新", class: 'btn btn-primary' %>
            <% end %></td>
     </tr>
    </tbody>
    <% end %>
  </table>
</div>

<div>
   <p>商品合計</p>
   <%= (@order.total_fee - @order.shipping).to_s(:delimited)%>円
</div>
<br>
<div>
   <p>送料</p>
   <%= @order.shipping %>円
</div>
<br>
<div>
 <p>請求金額合計</p>
 <%= @order.total_fee.to_s(:delimited) %>円
</div>
 
 
 
   
   
   