<div class = container>
  <div class="row">
    <div class="col-auto">
      <h4 style="background-color: #f8f9fa; padding: 0.25rem 0.75rem;">ジャンル一覧・追加</h4>
    </div>
  </div>
        <%= form_with model: Genre.new, url:admin_genres_path , local: true do |f| %>
          <%= f.label :ジャンル名 %>
            <%= f.text_field :name, placeholder: 'ジャンル名' %>
          <%= f.submit '新規登録' %>
        <% end %>
          <table class="table">
            <tr>
              <th>ジャンル</th>
            </tr>
            <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to '編集する', edit_admin_genre_path(genre) %></td>
            </tr>
          </table>
        <% end %>
      
  </div>
</div>