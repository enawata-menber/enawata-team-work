  <h4><span style="background-color: #f8f9fa; padding: 0.25rem 0.75rem;"><%= (@customer.last_name + @customer.first_name) %>さんの会員情報編集</span></h4>

  <%= form_with model: @customer, url: admin_customer_path(@customer.id) do |f| %>
  <div class="row mb-1 mt-5">
    <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm">名前</label>
      <div class="col-sm-4">
        <div class="d-flex align-items-center">
          <%= f.text_field :last_name, value: @customer.last_name, autofocus: true, class: "form-control form-control-sm mr-3", placeholder: "姓" %>
          <%= f.text_field :first_name, value: @customer.first_name, autofocus: true, class: "form-control form-control-sm", placeholder: "名" %>
        </div>
      </div>
  </div>
        
  <div class="row mb-1">
    <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm">フリガナ</label>
      <div class="col-sm-4">
        <div class="d-flex align-items-center">
          <%= f.text_field :last_name_kana, value: @customer.last_name_kana, autofocus: true, class: "form-control form-control-sm mr-3", placeholder: "セイ" %>
          <%= f.text_field :first_name_kana, value: @customer.first_name_kana, autofocus: true, class: "form-control form-control-sm", placeholder: "メイ" %>
        </div>
      </div>
  </div>
  
  <div class="row mb-1">
    <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm">郵便番号</label>
      <div class="col-sm-4">
        <div class="d-flex align-items-center">
          <%= f.text_field :postal_code, value: @customer.postal_code, autofocus: true, class: "form-control form-control-sm mr-3" %>
        </div>
      </div>
  </div>
  
  <div class="row mb-1">
    <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm">住所</label>
      <div class="col-sm-4">
        <div class="d-flex align-items-center">
          <%= f.text_field :address, value: @customer.address, autofocus: true, class: "form-control form-control-sm mr-3" %>
        </div>
      </div>
  </div>
  
  <div class="row mb-1">
    <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm">電話番号</label>
      <div class="col-sm-4">
        <div class="d-flex align-items-center">
          <%= f.text_field :telephone_number, value: @customer.telephone_number, autofocus: true, class: "form-control form-control-sm mr-3" %>
        </div>
      </div>
  </div>
  
  <div class="row mb-1">
    <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm">メールアドレス</label>
      <div class="col-sm-4">
        <div class="d-flex align-items-center">
          <%= f.email_field :email, value: @customer.email, autofocus: true, class: "form-control form-control-sm mr-3" %>
        </div>
      </div>
  </div>
  
  <div class="row mb-1">
    <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm">会員ステータス</label>
      <div class="col-sm-4">
        <div class="d-flex align-items-center">
            <%= f.radio_button :is_deleted, :false %>
            <%= f.label :is_deleted, "有効", { value: :false} %>
            <%= f.radio_button :is_deleted, :true %>
            <%= f.label :is_deleted, "退会", { value: :true} %>
        </div>
      </div>
  </div>
                   
  <div class="row mb-1">
    <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm"></label>
      <div class="col-sm-4">
        <div class="d-flex align-items-center">
          <%= f.submit "編集内容を保存", class: 'btn btn-success' %>
        </div>
      </div>
  </div>
  <% end %>
  