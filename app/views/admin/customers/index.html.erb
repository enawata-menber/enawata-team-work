<div class="container">
    <div class="row">
        <div class="col">
            <h4>会員一覧</h4>
              <table class="table">
                  <thead>
                      <tr>
                          <th>会員ID</th>
                          <th>氏名</th>
                          <th>メールアドレス</th>
                          <th>ステータス</th>
                      </tr>
                  </thead>
                  <% @customers.each do |customer| %>
                      <tr>
                          <td><%= customer.id %></td>
                          <td><%= link_to (customer.last_name + customer.first_name), admin_customer_path(customer.id) %></td>
                          <td><%= customer.email %></td>
                          <td><%= customer.customer_status %> </td>
                      </tr>
                  <% end %>
              </table>
        </div>
    </div>
</div>