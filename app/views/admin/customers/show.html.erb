<div class="container">
    <div class="row">
        <div class="col">
            <h4><%= @customer.full_name %>さんの会員情報</h4>
            <table class="table">
                <tr>
                    <th>会員ID</th>
                    <td><%= @customer.id %></td>
                </tr>
                <tr>
                    <th>氏名</th>
                    <td><%= @customer.last_name %><%= @customer.first_name %></td>
                </tr>
                <tr>
                    <th>フリガナ</th>
                    <td><%= @customer.kana_last_name %><%= @customer.kana_first_name %></td>
                </tr>
                <tr>
                    <th>郵便番号</th>
                    <td><%= @customer.postal_code %></td>
                </tr>
                <tr>
                    <th>住所</th>
                    <td><%= @customer.address %></td>
                </tr>
                <tr>
                    <th>電話番号</th>
                    <td><%= @customer.telephone_number %></td>
                </tr>
                <tr>
                    <th>メールアドレス</th>
                    <td><%= @customer.email %></td>
                </tr>
                <tr>
                    <th>会員ステータス</th>
                    <td><%= @customer.customer_status %></td>
                </tr>
                <tr>
                    <td></td>
                    <td><%= link_to "編集する", edit_customer_path,class:"btn btn-success" %></td>
                    <td><%= link_to "注文履歴一覧を見る",class:"btn btn-primary" %></td> <!--パス追加-->
                </tr>
            </table>
        </div>
    </duv>
</div>
