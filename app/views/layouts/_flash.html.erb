<% if flash[:notice] %>
  <p class="text-success"><%= flash[:notice] %></p>
<% end %>
<% if flash[:alert] %>
  <p class="text-danger"><%= flash[:alert] %></p>
<% end %>
<% if flash[:success] %>
  <p class="text-danger"><%= flash[:success] %></p>
<% end %>
<% if flash[:error] %>
  <p class="text-success"><%= flash[:error] %></p>
<% end %>
