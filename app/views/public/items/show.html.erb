<div class = "xontainer mt-4">
    <div class="row">
        <div class ="col-md-4">
            <%= image_tag @item.image_url,alt: @item.name. class: "imag-fluid" %>
        </div>
        <div class="col-md-8">
            <h2><%= item.name %></h2>
            <p><%= item.introduction %></p>
            <p class="fs-5">
                ¥　Price including tax: 
                <span class="price-with-tax"><%= number_to_currency(price_including_tax(@item.price_excluding_tax)) %></span>
                <span class="tax-label small">（税込）</span>
            </p>
            <!--プルダウンメニューでの個数選択-->
            <% if @item.is_active %>
           　　 <%= form_tag order_path, method: :post do %>
                <div class="form-group">
                  <%= label_tag 'quantity', 'Quantity:' %>
                  <%= select_tag 'quantity', options_for_select((1..@item.stock_count).to_a.map { |num| [num, num] }, 1), { prompt: '個数選択' }, class: 'form-control' %>
                </div>
                <%= submit_tag 'カートに入れる', class: 'btn btn-primary mt-3' %>
               <% end %>
              <% else %>
                <p class="text-danger">この商品は現在、購入できません。</p>
            <% end %>
        </div>
    </div>
</div>