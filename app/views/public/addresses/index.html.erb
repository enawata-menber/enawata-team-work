<h4 style="margin-top: 30px;"><span style="background-color: #f8f9fa; padding: 0.25rem 0.75rem;">配送先登録/一覧</span></h4>
<%= render 'layouts/errors', obj: @address %>

  <%= form_with model: @address, url: public_addresses_path do |f| %> 
    <div class="row mb-1 mt-4">
      <label for="email" class="col-sm-2 col-form-label col-form-label-sm"><strong>郵便番号(ハイフンなし)</strong></label>
      <div class="col-sm-2">
        <%= f.text_field :postal_code, autofocus: true, class: "form-control form-control-sm" %>
      </div>
    </div>
      
      
    <div class="row mb-1">
      <label for="email" class="col-sm-2 col-form-label col-form-label-sm"><strong>住所</strong></label>
      <div class="col-sm-2">
        <%= f.text_field :address, autofocus: true, class: "form-control form-control-sm" %>
      </div>
    </div>
      
    <div class="row mb-1">
      <label for="email" class="col-sm-2 col-form-label col-form-label-sm"><strong>宛名</strong></label>
      <div class="col-sm-2">
        <%= f.text_field :name, autofocus: true, class: "form-control form-control-sm" %>
      </div>
    </div>
    
    <div class="row mb-1">
      <label for="email" class="col-sm-2 col-form-label col-form-label-sm"></label>
      <div class="col-sm-2">
        <%= f.submit '新規登録', class: "btn btn-success" %>
      </div>
    </div>
  <% end %>
  <br>
  <br>
  
  <table class="table table-bordered table-hover">
   <tr>
    <th style="width: 50px;" class="table-light">郵便番号</th>
    <th style="width: 200px;" class="table-light">住所</th>
    <th style="width: 150px;" class="table-light">宛名</th>
    <th style="width: 150px;" class="table-light"></th></th>
  </tr>
  <% @addresses.each do |address| %>
  <tr>
    <td><%= address.postal_code %></td>
    <td><%= address.address %></td>
    <td><%= address.name %></td>
    <td class="d-flex justify-content-center">
      <%= link_to "編集する", edit_public_address_path(address), class: "btn btn-success  mr-2" %>
      <%= link_to "削除する", public_address_path(address), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-danger" %>
    </td>
  </tr>
  <% end %>
</table>
  