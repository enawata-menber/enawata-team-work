<div class="col-12 col-md-2 mb-4">
  <table class="table table-hover table-bordered">
    <thead>
      <tr>
        <th class="active text-center">
          <h5 class="genre_said">ジャンル検索</h5>
        </th>
      </tr>
    </thead>
    <tbody>
      <% if @genres.present? %>
        <% @genres.each do |genre| %>
          <tr>
            <td class="underline">
              <%= link_to genre.name, search_public_items_path(genre.id), method: :get %>
            </td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td>ジャンルがありません</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>