<h1>商品一覧</h1>
<p>全<%= @item_count %>件</p>

<div class="container">
    <div class="row">
         <% @items.each do |item| %>
             <div class = "col-md-3">
                 <img src = "<%= item.image_url %>" class="card-image-top" alt="<%= item.name %>の画像">
                 <div>
                    <h5 class ="card-title"><%= item.name %></h5>
                    <p class="card-text">¥<%= item.price%></p>
                 </div>
             </div>
         <% end %>
    </div>
 </div>
 
  <!--ページネーション表示-->
  <div class="text-center">
      <%= paginate @items %>
  </div>
    