<%# views/your_view_file.html.erb %>
<%= stylesheet_link_tag 'public/homes', media: 'all', 'data-turbolinks-track': 'reload' %>
<div class="container mt-4">
  <div class="row">
    <!-- 左側のジャンルリンク -->
    <div class="col-md-3">
      <div class="mt-5">
        <!--%= render 'public/shared/genre_links', genres: @genres %>-->
      </div>
    </div>

    <!-- ようこその文章 -->
    <div class="col-12 col-md-9 d-flex flex-column align-items-center justify-content-center welcome-container">
      <div class="welcome-text mt-4 mb-4" >
        <p>
          ようこそ、ながのCAKEへ！<br>
          このサイトは、ケーキ販売のECサイトになります。<br>
          会員でない方も商品の閲覧はできますが、<br>
          購入には会員登録が必要になります。
        </p>
      </div>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-12 col-md-9">
      <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
      <h2 class="mt-3 mb-3">新着商品</h2>
      <div class="d-flex flex-wrap">
        <% if @items.any? %>
          <% @items.each do |item| %>
            <%= link_to item_path(item.id), class: "text-decoration-none w-25" do %>
              <div class="card m-2 p-1 card-hover">
                <%= image_tag item.get_proauct_image(100, 100), class: "card-img-top rounded shadow-sm" %>
                <div class="card-body text-body">
                  <h5 class="card-title text-primary"><%= item.name %></h5>
                  <p class="card-text text-primary">¥<%= item.price %></p>
                </div>
              </div>
            <% end %>
          <% end %>
        <% else %>
          <p>商品がありません</p>
        <% end %>
      </div>
      </div>
      <div class="text-right mt-3">
        <%= link_to "全ての商品を見る＞", public_items_path ,class: " d-inline-block custom-link " %>
      </div>
    </div>
  </div>
</div>