<h3>注文履歴詳細</h3>

<h4>注文情報</h4>
  <table border="1" style="border-collapse: collapse">
    <tr>
      <th>注文日</th>
      <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
    </tr>
      
    <tr>
      <th>配送先</th>
      <td><%= @order.order_address %></td>
    </tr>
      
    <tr>
      <th>支払い方法</th>
      <td><%= @order.peyment_method %></td>
    </tr>
      
    <tr>
      <th>ステータス</th>
      <td><%= @order.status %></td>
    </tr>
  </table>
  
<h4>請求情報</h4>
  <table border="1" style="border-collapse: collapse">
    <tr>
      <th>商品合計</th>
      <td><%= @order.total_payment %></td>
    </tr>
      
    <tr>
      <th>配送料</th>
      <td><%= 800 %>円 %></td>
    </tr>
      
    <tr>
      <th>ご請求額</th>
      <td><%= @order.total_payment + 800 %></td>
    </tr>
  </table>
<h4>注文内容</h4>
  <table border="1" style="border-collapse: collapse">
    <tr>
      <th>商品</th>
      <th>単価（税込み）</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
    <tr>
      <% @order_item.each do |order_item| %>
      <td>
        <%= order_details.item.item.name %>
        <%= order_details.item.tax_in_price.to_s %>
        <%= order_details.amount %>
        <%= (order_details.item.tax_in_price * @order_details.amount).to_s %>
      </td>
      <% end %>
    </tr>
  </table>