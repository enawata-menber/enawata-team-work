<h3>注文履歴一覧</h3>

<table border="2" style="border-collapse: collapse">
  <tr>
    <th style="width: 100px;">注文日</th>
    <th style="width: 300px;">配送先</th>
    <th style="width: 100px;">注文商品</th>
    <th style="width: 100px;">支払金額</th>
    <th style="width: 150px;">注文ステータス</th>
    <th style="width: 100px;">注文詳細</th>
  </tr>
  <% @orders.each do |order| %>
    <tr>
      <td style="width: 100px;"><%= order.created_at.strftime('%Y/%m/%d') %></td>
      <td style="width: 300px;"><%= order.order_address %></td>
      <td style="width: 100px;"><%= order.order_details.item_id %></td>
      <td style="width: 100px;"><%= order.total_payments %></td>
      <td style="width: 100px;"><%= order.status %></td>
      <td class="text-center">
      <%= link_to "表示する", public_order_path, class: "btn btn-primary" %>
      </td>
    </tr>
  <% end %>
</table>
