<h3 class="bg-secondary">新規会員登録</h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  
  <table>
    <tr>
      <th>名前</th>
      <td>
        <%= f.label :last_name,  "(性) #{f.text_field :last_name, autofocus: true}".html_safe %>
        <%= f.label :first_name,  "(名) #{f.text_field :first_name, autofocus: true}".html_safe %>
      </td>
    </tr>
    
    <tr>
      <th>フリガナ</th>
      <td>
        <%= f.label :last_name_kana, "(セイ) #{f.text_field :last_name_kana, autofocus: true}".html_safe %>
        <%= f.label :first_name_kana, "(メイ) #{f.text_field :first_name_kana, autofocus: true}".html_safe %>
      </td>
    </tr>
    
    <tr>
      <th>メールアドレス</th>
      <td>
        <%= f.email_field :email, autofocus: true %>
      </td>
    </tr>
    
    <tr>
      <th>郵便番号（ハイフンなし）</th>
      <td>
        <%= f.text_field :postal_code, autofocus: true %>
      </td>
    </tr>
    
    <tr>
      <th>住所</th>
      <td>
        <%= f.text_field :address, autofocus: true %>
      </td>
    </tr>
    
    <tr>
      <th>電話番号（ハイフンなし）</th>
      <td>
        <%= f.text_field :telephone_number, autofocus: true %>
      </td>
    </tr>
    
    <tr>
      <th>パスワード（6文字以上）</th>
      <td>
        <%= f.password_field :password %>
      </td>
    </tr>
    
    <tr>
      <th>パスワード（確認用）</th>
      <td>
        <%= f.password_field :password_confirmation %>
      </td>
    </tr>
    
    <tr>
      <th></th>
      <td>
       <div class="btn btn-primary"> <%= f.submit '新規登録' %> </div>
      </td>
    </tr>
  </table>
<% end %>

<h3 class="bg-secondary">既に登録済みの方</h3>
<%= link_to "こちら", new_customer_session_path %>からログインしてください
