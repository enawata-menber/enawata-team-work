<h3>マイページ</h3>

　<table>
　  <tr>
      <th>登録情報</th>
      <td>
        <%= link_to "編集する",   public_edit_customer_information_path(@customer), class: "btn btn-success btn-block" %>
      </td>
    </tr>
  </table>
    <br>
  <table border="2" style="border-collapse: collapse">
    <tr>
      <th>氏名</th>
      <td width="300">
        <%= "#{@customer.last_name} #{@customer.first_name}" %>
      </td>
    </tr>
      
    <tr>
      <th>カナ</th>
      <td>
        <%= "#{@customer.last_name_kana} #{@customer.first_name_kana}" %>
      </td>
    </tr>
      
    <tr>
      <th>郵便番号</th>
      <td>
        <%= @customer.postal_code %>
      </td>
    </tr>
      
    <tr>
      <th>住所</th>
      <td>
        <%= @customer.address %>
      </td>
    </tr>
      
    <tr>
      <th>電話番号</th>
      <td>
        <%= @customer.telephone_number %>
      </td>
    </tr>
      
    <tr>
      <th>メールアドレス</th>
      <td>
        <%= @customer.email %>
      </td>
    </tr>
  </table>
    
    <br>
    
  <table>
    <tr>
      <th>配送先</th>
      <td>
        <%= link_to "一覧を見る",  public_addresses_path(@customer), class: "btn btn-primary btn-sm" %>
      </td>
    </tr>
    <br>
    <tr>
      <th>注文履歴</th>
      <td>
        <%= link_to "一覧を見る",  public_orders_path(@customer), class: "btn btn-primary btn-sm" %>
      </td>
    </tr>
  </table>
  
